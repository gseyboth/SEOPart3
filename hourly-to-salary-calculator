  <h1>Hourly to Salary Calculator</h1>

  <p>Use our <a href="/hourly-to-salary-calculator.html">Hourly to Salary Calculator</a> to estimate your annual income based on your hourly wage, hours worked per week, and paid time off. If youâ€™re also calculating your tax obligations, try our <a href="/contractor-tax-estimator.html">Contractor Tax Estimator</a>.</p>

  <h2>Enter Your Pay Details</h2>

  <label>Hourly Wage ($):
    <input type="number" id="hourlyWage" placeholder="e.g., 25">
  </label>

  <label>Hours Worked Per Week:
    <input type="number" id="hoursPerWeek" placeholder="e.g., 40">
  </label>

  <label>Paid Weeks Off Per Year:
    <input type="number" id="weeksOff" placeholder="e.g., 2">
  </label>

  <button onclick="calculateSalary()">Calculate Salary</button>

  <div class="result" id="result"></div>

  <script>
    function calculateSalary() {
      const hourlyWage = parseFloat(document.getElementById('hourlyWage').value) || 0;
      const hoursPerWeek = parseFloat(document.getElementById('hoursPerWeek').value) || 0;
      const weeksOff = parseFloat(document.getElementById('weeksOff').value) || 0;

      const paidWeeks = 52;
      const workedWeeks = paidWeeks - weeksOff;
      const annualSalary = hourlyWage * hoursPerWeek * workedWeeks;
      const monthlySalary = annualSalary / 12;
      const weeklyPay = hourlyWage * hoursPerWeek;

      const resultHTML = `
        <h3>Estimated Salary</h3>
        <table>
          <tr><th>Annual Salary</th><td>$${annualSalary.toFixed(2)}</td></tr>
          <tr><th>Monthly Pay</th><td>$${monthlySalary.toFixed(2)}</td></tr>
          <tr><th>Weekly Pay</th><td>$${weeklyPay.toFixed(2)}</td></tr>
        </table>

        <p>This calculation assumes you work ${workedWeeks} weeks per year after ${weeksOff} paid weeks off.</p>
      `;

      document.getElementById('result').innerHTML = resultHTML;
    }
  </script>

